<div id="bg-peach-castle" class="bg-peach-castle">
	<div id="container" class="container">
		<div class="challenges">
			{{#each model as |challenge|}}
				<a class="box" onClick={{action "popModal" challenge}}>
					<span>{{challenge.points}}</span>
				</a>

				<div id="modal-{{challenge.id}}" class="modal">
					<div class="modal-content">
						<div class="modal-header">
							<span class="modal-heading">{{challenge.title}}</span>
							<span class="close" onClick={{action "closeModal" challenge}}>&times;</span>
						</div>
						<div class="modal-body">
							<p>{{challenge.description}}</p>
							<p>{{challenge.points}}</p>
		        			{{input class="form-control" type="text" value=flag placeholder="Enter flag, format {null:flag}"}}
						</div>
						<div class="modal-footer">
							<button class="modal-submit" onClick={{action "submitFlag" challenge.id}}>Submit</button>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>