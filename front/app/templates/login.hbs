<div class="login-box">
	<form>
		<div><h2>Login</h2></div>
		<div>
            {{input class="form-control login-input" type="text" value=auth.username placeholder="Username"}}
		</div>
		<div>
            {{input class="form-control login-input" type="password" value=auth.password placeholder="Password"}}
		</div>
		<button class="login-button" {{action 'login'}}>Login</button>
	</form>
</div>
