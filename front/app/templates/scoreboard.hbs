<div id="container" class="container">
	<h1>Scoreboard</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Team</th>
				<th>Balloon 1</th>
				<th>Balloon 2</th>
				<th>Balloon 3</th>
				<th>Score</th>
			</tr>
		</thead>
		{{!-- I envision the structure being something like: --}}
		{{!-- team: {
					name: '',
					balloons: [
						{popped: true},
						{popped: true},
						{popped: true}
					],
					score: ''
			    } 
		--}}
		<tbody>
			{{#each model as |team|}}
				<tr>
					<td>{{team.name}}</td>
					{{#each team.balloons as |balloon|}}
						<td>{{balloon.popped}}</td>
					{{/each}}
					<td>{{team.score}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>